{
  "pacman": {
    "depends": {
      "systemd": ">=245.5"
    }
  },
  "template": {
    "usedBy": [
      "arlac77/hook-ci",
      "arlac77/npm-template-sync-github-hook",
      "arlac77/template-kronos-app",
      "arlac77/timeseries-sqlite2leveldb",
      "k0nsti/konsum"
    ],
    "mergers": [
      {
        "type": "INI",
        "pattern": "**/*.service",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false,
          "mergeHints": {
            "*": {
              "overwrite": false
            },
            "Service": {
              "orderBy": [
                "Type",
                "RemainAfterExit",
                "GuessMainPID",
                "PIDFile",
                "BusName",
                "ExecStart",
                "ExecStartPre",
                "ExecStartPost",
                "ExecReload",
                "ExecCondition",
                "ExecReload",
                "ExecStop",
                "ExecStopPost",
                "RestartSec",
                "TimeoutStartSec",
                "TimeoutStopSec",
                "TimeoutAbortSec",
                "TimeoutSec",
                "RuntimeMaxSec",
                "WatchdogSec",
                "Restart",
                "SuccessExitStatus",
                "RestartPreventExitStatus",
                "RestartForceExitStatus",
                "RootDirectoryStartOnly",
                "NonBlocking",
                "NotifyAccess",
                "Sockets",
                "FileDescriptorStoreMax",
                "USBFunctionDescriptors",
                "USBFunctionStrings",
                "OOMPolicy",
                "User",
                "Group",
                "SupplementaryGroups"
              ]
            }
          }
        }
      },
      {
        "type": "INI",
        "pattern": "**/*.socket",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false,
          "mergeHints": {
            "*": {
              "overwrite": false
            }
          }
        }
      },
      {
        "type": "INI",
        "pattern": "**/*.mount",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false,
          "mergeHints": {
            "*": {
              "overwrite": false
            }
          }
        }
      },
      {
        "type": "MergeLineSet",
        "pattern": "**/sysusers.conf",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false,
          "defaultIgnore": [
            ""
          ]
        }
      },
      {
        "type": "MergeLineSet",
        "pattern": "**/tmpfiles.conf",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false,
          "defaultIgnore": [
            ""
          ]
        }
      }
    ]
  }
}